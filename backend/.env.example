# OpenAI (required for chat)
OPENAI_API_KEY=sk-...

# Google OAuth (required for login)
# Create at https://console.cloud.google.com/apis/credentials
# Add redirect URI: http://localhost:8000/auth/google/callback
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...

# JWT secret (optional; random one is generated if missing)
JWT_SECRET=your-secret-at-least-32-chars

# Where the React app runs (for OAuth redirect after login)
FRONTEND_URL=http://localhost:5173

# Backend base URL (for OAuth redirect_uri; set if behind proxy)
# API_BASE_URL=http://localhost:8000
